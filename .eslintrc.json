{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jquery": true,
        "node": true
    },
    "plugins": [
        "standard",
        "promise",
        "css-modules",
        "deprecate"
    ],
    "extends": [
        "airbnb-base",
        "jquery"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "$": true
    },
    "parserOptions": {
        "ecmaVersion": 2019,
        "ecmaFeatures": {
            "destructuring": true
        }
    },
    "rules": {
        "quotes": ["error", "single"],
        "prefer-arrow-callback": [ "error", { "allowNamedFunctions": true } ],
        "consistent-return": 2,
        "no-var"           : 2,
        "new-cap"          : 0,
        "indent"           : 0,
        "no-else-return"   : 1,
        "semi"             : [1, "always"],
        "space-unary-ops"  : 2,
        "no-undef": 1,
        "no-unused-vars": 1,
        "keyword-spacing": [
            "error", {
                "before": false, "after": true, "overrides": {
                    "const": { "after": true }
                }
            }],
        "space-before-function-paren": 0,
        "space-before-blocks": ["error", "always"],
        "camelcase": 0,
        "handle-callback-err": ["error", "none"],
        "object-curly-spacing": ["error", "always"],
        "space-in-parens": ["error", "always", { "exceptions":  ["{}", "[]"] }],
        "no-param-reassign": 0
    }
}
